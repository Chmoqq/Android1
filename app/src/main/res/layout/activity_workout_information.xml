<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:textSize="32sp"
        android:id="@+id/workout_title_text_view"
        android:text="Название упражнения"
        android:textAlignment="center"
        android:layout_margin="8dp"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/workout_image_view"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/workout_title_text_view" />
    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_below="@id/workout_image_view"
        android:layout_width="match_parent"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/workout_description_text_view"
            android:text="@string/ipsum"
            android:layout_height="wrap_content" />
    </ScrollView>

</RelativeLayout>