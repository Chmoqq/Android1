            android:id="@+id/list_item_title_text_view1"
            android:layout_width="match_parent"
            android:layout_toRightOf="@+id/list_item_image_view1"
            android:text="Приседания со штангой"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_below="@+id/list_item_title_text_view1"
            android:layout_alignParentRight="true"
            android:text="Последний подход"
            android:layout_height="wrap_content" />

