<?xml version="1.0" encoding="utf-8"?>
    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/item1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:elevation="10dp"
        app:cardBackgroundColor="@color/white"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:id="@+id/inside_layout_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp">

            <ImageView
                android:id="@+id/list_item_image_view"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="4dp" />

            <TextView
                android:id="@+id/list_item_title_text_view1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@+id/list_item_image_view"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/last_approach_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/list_item_title_text_view1"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:text="@string/last_approach" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>



