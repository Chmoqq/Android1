<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item1"
    android:layout_margin="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/list_item_image_view"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="4dp"

        />
    <TextView
        android:layout_marginLeft="4dp"
        android:id="@+id/list_item_title_text_view1"
        android:layout_width="match_parent"
        android:layout_toRightOf="@+id/list_item_image_view"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_below="@+id/list_item_title_text_view1"
        android:layout_marginRight="8dp"
        android:layout_alignParentRight="true"
        android:text="Последний подход"
        android:layout_height="wrap_content" />

</RelativeLayout>